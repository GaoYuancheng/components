  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx": "react",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@pms/ui": ["./src"]
    },
    "outDir": "./lib"
  }
}
